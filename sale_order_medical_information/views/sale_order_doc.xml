<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_doc_form" model="ir.ui.view">
            <field name="name">sale_order_doc_form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="tipo_venta" />
                    <field name="partner_paciente" invisible="tipo_venta != 'transito' and tipo_venta != 'asistenciacirugia'"/>
                    <field name="partner_doctor" invisible="tipo_venta != 'transito' and tipo_venta != 'asistenciacirugia'"/>
                    <field name="fecha_operacion"  invisible="tipo_venta != 'transito' and tipo_venta != 'asistenciacirugia'"/>
                    <field name="asistente_cirugia"  invisible="tipo_venta != 'asistenciacirugia'" options="{'no_create': True}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>