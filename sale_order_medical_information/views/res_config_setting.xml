<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_setting_form_inherit_sale_medical" model="ir.ui.view">
            <field name="name">sale_order_medical_information.res_config_settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='proforma_configuration']" position="after">
                    <div class="col-12 col-lg-6 o_setting_box" id="especialista_configuration">
                        <div class="o_setting_left_pane">

                        </div>
                        <div class="o_setting_right_pane">
                            <label for="partner_especialista_id"/>
                            <field name="partner_especialista_id"/>
                            <div class="text-muted">
                                Configuracion por defecto para especialista en pedidos de venta y facturacion
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>