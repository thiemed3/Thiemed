<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_move_doc_form" model="ir.ui.view">
            <field name="name">account_move_doc_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_reference']" position="after">
                    <field name="tipo_venta" attrs="{'invisible': [('move_type', 'not in', ['out_invoice'])]}"/>
                    <field name="partner_paciente"
                           attrs="{'invisible': [('tipo_venta', '!=', 'asistenciacirugia'),('tipo_venta', '!=', 'transito')]}"/>
                    <field name="partner_doctor"
                           attrs="{'invisible': [('tipo_venta', '!=', 'asistenciacirugia'),('tipo_venta', '!=', 'transito')]}"/>
                    <field name="fecha_operacion"
                           attrs="{'invisible': [('tipo_venta','!=','asistenciacirugia'),('tipo_venta','!=','transito')]}"/>
                    <field name="asistente_ciguria"
                           attrs="{'invisible': [('tipo_venta','!=','asistenciacirugia')]}"
                           options="{'no_create': True}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>